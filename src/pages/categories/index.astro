---
import Base from "@layouts/Base.astro";
import { getTaxonomy } from "@lib/taxonomyParser.astro";
import { humanize } from "@lib/utils/textConverter";
import Category from "@svgs/Category.astro";

const categories = await getTaxonomy("posts", "categories");

---

<Base title={"Categories"}>
  <section class="section">
    <div class="container text-center">
      <h1 class="h2 page-heading">Categories</h1>
      <ul class="flex flex-col justify-center gap-4 sm:flex-row">
        {
          categories.map((category) => (
            <li class="inline-block">
              <a
                href={`/programming-journey/categories/${category}`}
                class="group flex items-center rounded-lg bg-theme-light px-4 py-2 text-dark transition hover:bg-primary hover:text-white"
              >
                <Category className="mr-1 h-6 w-6 scale-75 text-primary transition group-hover:text-white" />
                <>{humanize(category || "")}</>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Base>
